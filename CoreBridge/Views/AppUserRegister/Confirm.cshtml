@model CoreBridge.Models.DTO.AppUserDto
@{
    Layout = "_TopLayout";
}
<div class="w-full flex flex-wrap">
    <!-- Register Section -->
    <div class="w-full md:w-1/2 flex flex-col">

        @Html.Partial("_logo")

        <div class="flex flex-col justify-center md:justify-start my-auto pt-8 md:pt-0 px-8 md:px-24 lg:px-32">
            <p class="text-center text-3xl">以下の内容で登録をしますか？</p>
            @Html.Partial("_FormError")
            <form class="flex flex-col pt-3 md:pt-8" asp-controller="AppUserRegister" asp-action="Create" method="post">
                @Html.AntiForgeryToken()
                <div class="flex flex-col pt-4">
                    <label for="userid" class="text-lg">User ID</label>
                    @Model.UserId
                    <input asp-for="@Model.UserId" type="hidden" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mt-1 leading-tight focus:outline-none focus:shadow-outline" />
                </div>

                <div class="flex flex-col pt-4">
                    <label for="titel code" class="text-lg">Email</label>
                    @Model.TitleCode
                    <input asp-for="@Model.TitleCode" type="hidden" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mt-1 leading-tight focus:outline-none focus:shadow-outline" />
                </div>

                <div class="flex flex-col pt-4">
                    <label for="password" class="text-lg">Password</label>
                    @Model.Password
                    <input asp-for="@Model.Password" type="hidden" placeholder="Password" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mt-1 leading-tight focus:outline-none focus:shadow-outline" />
                </div>

                <div class="flex flex-col pt-4">
                    <label for="confirm-password" class="text-lg">Confirm Password</label>
                    @Model.ConfirmPassword
                    <input asp-for="@Model.ConfirmPassword" type="hidden" placeholder="Password" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mt-1 leading-tight focus:outline-none focus:shadow-outline" />
                </div>

                <input type="submit" value="Register" class="bg-black text-white font-bold text-lg hover:bg-gray-700 p-2 mt-8" />
            </form>
            <div class="text-center pt-12 pb-12">
                <p>Already have an account? <a href="/" class="underline font-semibold">Log in here.</a></p>
            </div>
        </div>

    </div>

    <!-- Image Section -->
    <div class="w-1/2 shadow-2xl">
        <img class="object-cover w-full h-screen hidden md:block" src="https://source.unsplash.com/IXUM4cJynP0" alt="Background" />
    </div>
</div>

