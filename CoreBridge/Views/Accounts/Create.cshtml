@model CoreBridge.Models.Entity.AppUser

@{
    ViewData["Title"] = "Create";
}

<h1>ユーザー情報登録</h1>
@*<h4>AppUser</h4>*@
@if (ViewBag.Alert != null)
{
    <div class="flex justify-between text-red-200 shadow-inner rounded p-3 bg-red-600">
        <p class="self-center">@ViewBag.Alert</p>
        <strong class="text-xl align-center cursor-pointer alert-del">&times;</strong>
    </div>
}
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <input asp-for="UserId" class="form-control" value="@Model.UserId" readonly/>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TitleCode" class="control-label"></label>
                <input asp-for="TitleCode" class="form-control" />
                <span asp-validation-for="TitleCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
<script>
    var alert_del = document.querySelectorAll('.alert-del');
    alert_del.forEach((x) =>
        x.addEventListener('click', function () {
            x.parentElement.classList.add('hidden');
        })
    );
</script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
