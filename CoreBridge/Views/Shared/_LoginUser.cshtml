@model CoreBridge.Models.DTO.AppUserDto

<div class="w-full flex flex-wrap">
     <!-- Login Section -->
     <div class="w-full md:w-1/2 flex flex-col">

        @Html.Partial("_logo")
         <div class="flex flex-col justify-center md:justify-start my-auto pt-8 md:pt-0 px-8 md:px-24 lg:px-32">
             <p class="text-center text-3xl">Admin User Login</p>
             @Html.Partial("_FormError")
            <form class="flex flex-col pt-3 md:pt-8" asp-controller="AppUserLogin" asp-action="Create" method="post">
                @Html.AntiForgeryToken()
                 <div class="flex flex-col pt-4">
                     <label for="User ID" class="text-lg">UserID</label>
                     <input asp-for="@Model.UserId" type="text" placeholder="UserID" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mt-1 leading-tight focus:outline-none focus:shadow-outline">
                 </div>
                 <div class="flex flex-col pt-4">
                     <label for="Title Code" class="text-lg">TitleCode</label>
                    <input asp-for="@Model.TitleCode" type="text" placeholder="TitleCode" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mt-1 leading-tight focus:outline-none focus:shadow-outline">
                 </div> 
                 <div class="flex flex-col pt-4">
                     <label for="password" class="text-lg">Password</label>
                     <input asp-for="@Model.Password" type="password" placeholder="Password" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mt-1 leading-tight focus:outline-none focus:shadow-outline">
                 </div>
                 @*<input asp-for="@Model.Name" type="hidden" value="aa"/>*@
                 <input asp-for="@Model.ConfirmPassword" type="hidden" value="aa"/>
  
                 <input type="submit" value="Log In" class="bg-black text-white font-bold text-lg hover:bg-gray-700 p-2 mt-8">
             </form>
@*             <div class="text-center pt-12 pb-12">
                <p>Don't have an account? <a href="/AppUserRegister" class="underline font-semibold">Register here.</a></p>
             </div>*@
         </div>

     </div>

     <!-- Image Section -->
     <div class="w-1/2 shadow-2xl">
         <img class="object-cover w-full h-screen hidden md:block" src="https://source.unsplash.com/IXUM4cJynP0">
     </div>
</div>
